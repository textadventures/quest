		}
		else {
		TryOpenClose (true, object)
		}
	</script>
	</command>

	<command name="klise">
	<pattern><![CDATA[^κλείσε (?<object>.*)$]]></pattern>
	<script type="script">
		if (HasScript (object, "turnoff")) {
			do (object, "turnoff")
		}
		else {
			TryOpenClose (false, object)
		}
	</script>
	</command>
	
